<div class="row">
    <div class="col-md-12">

        <h2>Categories
            <a href="/categories/add" class="btn btn-default pull-right">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> New Category
            </a>
        </h2>

        <hr />
        <div class="table-responsive">
            {{#unless data.message}}
            <table class="table ">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td><a href="/posts?category={{id}}">{{id}}</a></td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        <td>
                            <a href="/categories/delete/{{id}}" class="btn btn-danger pull-right btn-sm"
                                style="color: white !important;">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/unless}}
        </div>

    </div>


    {{#if data.message}}
    <div class="col-md-12 text-center">
        <h1>{{data.message}}</h1>
    </div>


    {{/if}}

</div>
<div class="row">
    {{#if msg}}
    <div class="alert alert-success alert-dismissible " style="max-width: 350px;margin:0 auto;" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
        <strong>Success!</strong> Category was deleted Successfully!
    </div>
    {{/if}}
</div>