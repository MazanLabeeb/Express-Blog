<div class="row">
    <div class="col-md-12">
        
        <h2>Posts
            <a href="/posts/add" class="btn btn-default pull-right">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> New Post
            </a>
        </h2>
        <hr />
        
        {{#unless data.message}}
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{!--
        </div> --}}

        {{#each data}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{formatDate postDate}}</td>
            <td><a href="/posts?category={{CategoryId}}">{{CategoryId}}</a></td>
            <td>
                {{#if published}}
                Yes
                {{else}}
                No
                {{/if}}</td>
            <td>
                <a href="/posts/delete/{{id}}" class="btn btn-danger pull-right btn-sm"
                    style="color: white !important;">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                </a>
            </td>
        </tr>

        {{/each}}

        </tbody>
        {{/unless}}

        </table>

    </div>

</div>

</div>

{{#if data.message}}
<div class="text-center">
    <h1>{{data.message}}</h1>
</div>

{{/if}}

<div class="container-fluid">
    <div class="row">
     {{#if msg}}
        <div class="alert alert-success alert-dismissible" style="max-width: 350px;margin:0 auto;" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
            <strong>Success!</strong> Post was deleted Successfully!
        </div>
        {{/if}}
</div>
</div>